<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/userpage_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/eng_top"
    android:orientation="vertical" >

    <!-- 标题 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@color/eng_top"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/pageuser_layout_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/selector_bg_text"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/pageuser_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingBottom="10dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="10dip"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/pageuser_titile"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="12dip"
                android:gravity="center_vertical"
                android:text="个人信息"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/pageuser_layout_profile"
                android:layout_width="fill_parent"
                android:layout_height="90dip"
                android:background="@drawable/shape_pagemore_color_no"
                >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_gravity="left|center_vertical"
                    android:text="头像"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/pageuser_img_profile"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="26dip"
                    android:src="@drawable/img_user_profile"
                    />


                <!--
                     <ImageView
                    android:id="@+id/pageuser_img_profile"
                    android:layout_width="72dip"
                    android:layout_height="72dip"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="26dip"
                    android:src="@drawable/img_user_profile" />
                -->
            </FrameLayout>

            <FrameLayout
                android:id="@+id/pageuser_layout_name"
                android:layout_width="fill_parent"
                android:layout_height="42dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/selector_pagemore_list_bg" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="23dip"
                    android:text="昵称"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/pageuser_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="26dip"
                    android:ellipsize="end"
                    android:maxEms="8"
                    android:singleLine="true"
                    android:text="阿呆"
                    android:textColor="@color/name_color"
                    android:textSize="18sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/pageuser_layout_sex"
                android:layout_width="fill_parent"
                android:layout_height="42dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/selector_pagemore_list_bg" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="23dip"
                    android:text="性别"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/pageuser_tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="26dip"
                    android:text="男"
                    android:textColor="@color/name_color"
                    android:textSize="18sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/qq1"
                android:layout_width="fill_parent"
                android:layout_height="42dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/selector_pagemore_list_bg" >

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="23dip"
                    android:text="QQ"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/pageuser_tv_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="26dip"
                    android:ellipsize="end"
                    android:maxEms="8"
                    android:singleLine="true"
                    android:textColor="@color/name_color"
                    android:textSize="18sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/phone1"
                android:layout_width="fill_parent"
                android:layout_height="42dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/selector_pagemore_list_bg" >

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="23dip"
                    android:text="手机号码"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


            </FrameLayout>

            <FrameLayout
                android:id="@+id/pageuser_layout_target_school"
                android:layout_width="fill_parent"
                android:layout_height="42dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/selector_pagemore_list_bg" >




            </FrameLayout>

            <FrameLayout
                android:id="@+id/pageuser_layout_target_major"
                android:layout_width="fill_parent"
                android:layout_height="42dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/selector_pagemore_list_bg" >




            </FrameLayout>

            <FrameLayout
                android:id="@+id/pageuser_layout_year"
                android:layout_width="fill_parent"
                android:layout_height="42dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/selector_pagemore_list_bg" >

                <TextView
                    android:id="@+id/TextView08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="23dip"
                    android:text="考研年份"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/pageuser_tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="26dip"
                    android:text="2013"
                    android:textColor="@color/name_color"
                    android:textSize="18sp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/pageuser_btn_logout"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:layout_marginLeft="41dip"
        android:layout_marginRight="41dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/selector_btn_logout"
        android:text="退出当前账号"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/pageuser_btn_preserve"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="41dip"
        android:layout_marginRight="41dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/selector_btn_save"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>